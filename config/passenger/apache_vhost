# Don't cause the server to break if Passenger module not loaded
<IfModule passenger_module>
	<VirtualHost *:80>
	  ServerName crm.asterislabs.com
        ServerAlias assets0.asterislabs.com
        ServerAlias assets1.asterislabs.com
        ServerAlias assets2.asterislabs.com
        ServerAlias assets3.asterislabs.com

	  DocumentRoot "/opt/apps/AsterisLabs is Fat Free/current/public"
	  CustomLog /var/log/apache2/AsterisLabs is Fat Free-access.log combined
	  ErrorLog /var/log/apache2/AsterisLabs is Fat Free-error.log
	  
	  RailsEnv production
	  # RailsAllowModRewrite off
	  #
	  # Check for maintenance file and redirect all requests
	  RewriteEngine On
	  RewriteCond %{REQUEST_URI} !\.(css|jpg|png|gif)$
	  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
	  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
      RewriteRule ^.*$ /system/maintenance.html [L]
	  <Directory "/opt/apps/AsterisLabs is Fat Free/current/public">
	    Order allow,deny
	    Allow from all
	  </Directory>
	</VirtualHost>
</IfModule>

